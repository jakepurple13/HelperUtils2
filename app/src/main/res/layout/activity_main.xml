<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="programmer.box.helperutils.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="TODO"
        app:srcCompat="@android:drawable/btn_star"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="266dp" />

    <Button
        android:id="@+id/noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:text="Send Notification" />

    <Button
        android:id="@+id/noti_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/group"
        android:layout_below="@+id/group"
        android:text="Send Notification with Reply" />

    <Button
        android:id="@+id/channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/noti"
        android:layout_below="@+id/noti"
        android:text="Create Notification Channel" />

    <Button
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/channel"
        android:layout_below="@+id/channel"
        android:text="Create Notification Group" />

    <Button
        android:id="@+id/snacky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/noti_reply"
        android:layout_below="@+id/noti_reply"
        android:text="Show SnackBar" />

    <Button
        android:id="@+id/toasty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/snacky"
        android:layout_below="@+id/snacky"
        android:text="Show Toast" />

</RelativeLayout>
